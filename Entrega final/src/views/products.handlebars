<div>
    <h1>Hola, {{user.name}}</h1>
    <p>Correo: {{user.email}}</p>
     <p>Role: {{user.role}}</p> 
    <p id="cid">Cart: {{user.cart}}</p>
</div>

<div>
  <button id="log_out">Log out</button>
</div>

<h1>Products</h1>

{{#each products}}
    <div class="product" style="display: inline-block"></li>
    <div class="product--card">
      <a class="product--image" href="#" title="View">
        <img class="img-responsive" src="{{this.thumbnails}}">
        <span class="tags">  
        </span>
      </a>

      <a class="product--title" href="#" title="View">{{this.title}}</a>

      <div class="product--brand">
        <a href="#" title="View">{{this.description}}</a>
      </div>
        <span class="product--price">Category: {{this.category}}</span>
        <span class="product--stock">Stock<b> {{this.stock}}</b></span>
      <p>
        <span class="propiedades" style="padding: 5px;">ID: {{this._id}}</span>
        <span class="propiedades" style="padding: 5px;">Code: {{this.code}}</span>
        <span class="propiedades">Status: {{this.status}}</span>
      </p>

      <a class="product--price" href="#" title="View">
        <span class="product--price-inner">
                <div class="price--sell-price">${{this.price}}</div>
    
        </span>
      </a>
          <button class="addCart" data-product-id="{{this._id}}">Add to Cart</button>
    </div>

  </div>
{{/each}}

<h2>Page: {{page}} of {{totalPages}}</h2>
<a href={{prevLink}}><button>PrevPage</button></a>
<a href={{nextLink}}><button>NextPage</button></a>

<script src="/js/inicio.js"></script> 
<script src='https://cdn.jsdelivr.net/npm/sweetalert2@11'></script>
<script src="/js/logout.js"></script>