<h1>Products on Cart</h1>

{{#each productsCart}}
    <div class="product">
    <div class="product--card">
      <a class="product--image" href="#" title="View">
        <img class="img-responsive" src="{{this.product.thumbnails}}">
        <span class="tags">  
        </span>
      </a>

      <a class="product--title" href="#" title="View">{{this.product.title}}</a>

      <div class="product--brand">
        <a href="#" title="View">{{this.product.description}}</a>
      </div>
        <span class="product--price">Category: {{this.product.category}}</span>
        <span class="product--stock">Stock<b> {{this.product.stock}}</b></span>
      <p>
        <span class="propiedades" style="padding: 5px;">ID: {{this._id}}</span>
        <span class="propiedades" style="padding: 5px;">Code: {{this.product.code}}</span>
        <span class="propiedades">Status: {{this.product.status}}</span>
      </p>

      <a class="product--price" href="#" title="View">
        <span class="product--price-inner">
                <div class="price--sell-price">${{this.product.price}} x {{this.quantity}}(quantity)</div>
    
        </span>
      </a>
    </div>

  </div>
{{/each}}

